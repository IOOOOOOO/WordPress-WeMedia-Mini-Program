/**app.wxss**/
.container {
  padding: 0 24rpx;
  background-color: #fff;
  transition: transform 0.5s;
  font-family: PingFangSC-Regular;
}
.header {
  width: 100%;
  height: 320rpx;
  position: relative;
}
.header image {
  width: 100%;
  height: 100%;
}
.header .title {
  top: 100rpx;
  left: 40rpx;
  right: 40rpx;
  color: #c1c1c1;
  font-size: 36rpx;
  line-height: 1.4;
  font-weight: 600;
  text-align: center;
  overflow: hidden;
  position: absolute;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
}
.header .descript {
  top: 150rpx;
  left: 40rpx;
  right: 40rpx;
  color: #cccccc;
  font-size: 32rpx;
  line-height: 1.4;
  text-align: center;
  overflow: hidden;
  position: absolute;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
}
.header .mask {
  top:0;
  left:0;
  right:0;
  bottom:0;
  opacity: 0.75;
  position: absolute;
  background-color: #111111;
}
.text-blue {
  color: #6894f6;
}
.wxParse-p {
  margin-top: 30rpx;
}
/*  ads   */
.cu-unit-ad {
  padding: 15rpx 0;
}
/** list **/
.list {
  position: relative;
  margin-bottom: 24rpx;
}
.list .list-item {
  padding: 15rpx 0;
  min-height: 150rpx;
  background: #fff;
  overflow: hidden;
  position: relative;
}
.list .list-item .content {
  height: 200rpx;
  display: block;
}
.list .list-item .content .title {
  margin-top:20rpx;
  margin-left: 240rpx;
  margin-bottom: 10rpx;
}
.list .list-item .content .excerpt {
  height: 160rpx;
  margin-top:10rpx;
  margin-left: 240rpx;
  margin-bottom: 20rpx;
}
.list .list-item .content .title text {
  color: #383838;
  font-size: 36rpx;
  line-height: 1.4;
  font-weight: 600;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
}
.list .list-item .content .excerpt text {
  color: #383838;
  font-size: 32rpx;
  line-height: 1.4;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
}
.list .list-item .content image.cover {
  left: 0;
  top: 24rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  position: absolute;
}
.list .list-item .content .information {
  left: 240rpx;
  right: 5rpx;
  bottom: 20rpx;
  display: flex;
  position: absolute;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: center;
}
.list .list-item .content .meta {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
}
.list .list-item .content .meta text {
  color:#8a8a8a;
  font-size: 30rpx;
}
.list .list-item .content .meta image {
  width: 30rpx;
  height: 30rpx;
  margin-left:10rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.list .list-item .content .cat-box {
  width: 200rpx;
}
.list .list-item .content .meta-box {
  width: 120rpx;
}
/** copyright **/
.copyright {
  font-size: 28rpx;
  line-height: 1.6;
  font-weight: 400;
  text-align: center;
  color: #c1c1c1;
  margin-top: 48rpx;
  padding-bottom: 40rpx;
}
/** 加载动画 **/
.loading {
  display: flex;
  padding: 20rpx 40rpx;
  background: #fff;
  justify-content: space-between;
}
/** 没有数据 **/
.no-data {
  margin: 10rpx auto;
}
.no-data-image {
  display: flex;
  background: #ffffff;
  padding: 20rpx 40rpx 0;
  justify-content: space-between;
}
.no-data-text {
  color: #c1c1c1;
  font-size: 36rpx;
  line-height: 1.6;
  font-weight: 400;
  text-align: center;
  padding-bottom: 40rpx;
}